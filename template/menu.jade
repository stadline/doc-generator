    .navbar.navbar-fixed-top.navbar-inverse
        .navbar-header
            a.navbar-brand(href="#")= 'Documentation'
        ul.nav.navbar-nav: each entry in menu || []
            li.dropdown
                a.dropdown-toggle(href="#",data-toggle="dropdown")= entry.title
                    span.caret
                ul.dropdown-menu: each child in entry.children || []
                    li: a(href=child.absolutePath)= child.title
